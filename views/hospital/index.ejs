<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Dashboard | Hospital</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="../assets/img/favicon.png" rel="icon">
  <link href="../assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="../assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="../assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="../assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="../assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="../assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="../assets/vendor/simple-datatables/style.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="../assets/css/style.css" rel="stylesheet">

</head>

<body>

  <!-- ======= Header ======= -->
   <%- include('header.ejs') %>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
   <%- include('aside.ejs') %>
  <!-- End Sidebar-->

  <main id="main" class="main">
    <!-- Dashboard Overview Section -->
    <div class="py-5 text-center">
      <h1 class="display-4">Welcome, <%= data.name %>!</h1>
      <p class="lead">This dashboard allows you to manage hospital administration efficiently.</p>
    </div>
  
    <!-- Statistics Section -->
    <div class="row text-center mb-5">
      <!-- Total Departments -->
      <div class="col-md-4">
        <div class="card bg-primary text-white shadow-sm">
          <div class="card-body">
            <h5 class="mt-2">Total Departments</h5>
            <h2><%= totalDepartments || 'Nil' %> </h2>
          </div>
        </div>
      </div>
  
      <!-- Total Doctors -->
      <div class="col-md-4">
        <div class="card bg-success text-white shadow-sm">
          <div class="card-body">
            <h5 class="mt-2">Total Doctors</h5>
            <h2><%= totalDoctors || 'Nil' %> </h2>
          </div>
        </div>
      </div>
  
      <!-- Total Appointments -->
      <div class="col-md-4">
        <div class="card bg-info text-white shadow-sm">
          <div class="card-body">
            <h5 class="mt-2">Total Appointments</h5>
            <h2><%= totalAppointments || 'Nil' %> </h2>
          </div>
        </div>
      </div>
    </div>
  
    <!-- Management Sections -->
    <div class="row">
      <!-- Add Doctor Details Section -->
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Manage Doctors</h5>
            <p class="card-text">
              Add or remove doctor details to manage login access and availability.
            </p>
            <a href="/hospital/addDoc" class="btn btn-primary btn-block">Add Doctor</a>
          </div>
        </div>
      </div>
  
      <!-- Add Department Section -->
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Manage Departments</h5>
            <p class="card-text">
              Create and update departments to organize doctors and hospital resources.
            </p>
            <a href="/hospital/addDepartment" class="btn btn-success btn-block">Add Department</a>
          </div>
        </div>
      </div>
  
      <!-- View Appointments Section -->
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">View Appointments</h5>
            <p class="card-text">
              Track and manage all patient appointments across departments and doctors.
            </p>
            <a href="/hospital/appoiments" class="btn btn-info btn-block">View Appointments</a>
          </div>
        </div>
      </div>
    </div>
  </main>
  

  <!-- ======= Footer ======= -->
   <%- include('footer.ejs') %>
  <!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="../assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/vendor/chart.js/chart.umd.js"></script>
  <script src="../assets/vendor/echarts/echarts.min.js"></script>
  <script src="../assets/vendor/quill/quill.min.js"></script>
  <script src="../assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="../assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="../assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="../assets/js/main.js"></script>

</body>

</html>